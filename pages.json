{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
		"^expert-(.*)": "@/components/expert-$1/expert-$1.vue",
		"^my-(.*)": "@/components/my-$1/my-$1.vue"
	},
	"pages": [{
		"path" : "pages/my/my",
		"style" : 
		{
			"navigationStyle": "custom",
			"enablePullDownRefresh" : false
		}
	},
	{
		"path" : "pages/expert/expert",
		"style" : 
		{
			"navigationStyle": "custom",
			"enablePullDownRefresh" : false
		}
	},
	{
		"path" : "pages/home/home",
		"style" : 
		{
			"navigationStyle": "custom",
			"enablePullDownRefresh" : false
		}
	},
	{
		"path" : "pages/login/login",
		"style" : 
		{
			"navigationBarTitleText" : "",
			"enablePullDownRefresh" : false
		}
	}],
	"subPackages": [{
		"root": "subpkg",
		"pages": [{
				  "path" : "history/history",
				  "style" : 
				  {
					"navigationStyle": "custom",
					"enablePullDownRefresh" : false
				  }
			},
			{
				  "path" : "search/search",
				  "style" : 
				  {
					"navigationBarTitleText" : "耕农千问",
					"enablePullDownRefresh" : false
				  }
			}
		]
	}],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8",
		"app-plus": {
			"background": "#efeff4"
		}
	},
	"tabBar": {
		"color": "#C4C4C4",
		"selectedColor": "#333",
		"iconfontSrc":"static/iconfont.ttf",
		"list": [{
				"pagePath": "pages/home/home",
				"text": "首页",
				"iconPath": "static/images/首页.png",
				"selectedIconPath": "static/images/首页_selected.png",
				// 不生效，根本不生效...
				"iconfont": { // 优先级高于 iconPath，该属性依赖 tabbar 根节点的 iconfontSrc
					"text": "\ue604",
					"selectedText": "\ue604",
					"fontSize": "17px",
					"color": "#C4C4C4",
					"selectedColor": "#333"
				}
			},
			{
				"pagePath": "pages/expert/expert",
				"text": "专家",
				"iconPath": "static/images/专家.png",
				"selectedIconPath": "static/images/专家_selected.png"
			},
			{
				"pagePath": "pages/my/my",
				"text": "我的",
				"iconPath": "static/images/个人.png",
				"selectedIconPath": "static/images/个人_selected.png"
			}
		]
	}
}
